<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Notes">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/linkdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Desc"
                android:layout_marginTop="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"/>
            <EditText
                android:id="@+id/linkclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Class Name"
                android:layout_below="@id/linkdesc"
                android:inputType="textMultiLine"
                android:layout_marginTop="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"/>
            <EditText
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter link"
                android:layout_below="@id/linkclass"
                android:inputType="textMultiLine"
                android:layout_marginTop="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:id="@+id/puploaditem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/link"
                android:text="Upload"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/shape"
                />
            <ProgressBar
                android:id="@+id/progcirclepackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>